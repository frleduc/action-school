name: myreusable workflow
 
on:
  workflow_call:
    inputs:
      mynodeversion:
        required: false
        default: 'lts/*'
        type: string
jobs:
  run-npm-test:
    steps:
        - name: checkout repo
          uses: actions/checkout@v3
        - name : install node
          uses: actions/setup-node@v3
          with:
            node-version: ${{inputs.mynodeversion}}
        - name: run install + test
          shell: bash
          run: |
            node -v
            npm install
            npm test